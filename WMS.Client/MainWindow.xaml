<Window x:Class="WMS.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System zarządzania :: Menu główne" Height="600" Width="800" MinHeight="600" MinWidth="800">
    <Grid Name="MainWindowContent">
        <Grid Name="LoginPanel">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBox Grid.Row="0" HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" Text="Login..." VerticalAlignment="Bottom" Width="200" Name="LoginTextBox" GotFocus="LoginTextBox_GotFocus"/>
            <PasswordBox Grid.Row="1" HorizontalAlignment="Center" Height="23" Password="123456" VerticalAlignment="Center" Width="200" Name="PasswordTextBox" GotFocus="PasswordTextBox_GotFocus"/>
            <Button Name="LoginButton" Grid.Row="2" Content="Zaloguj" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Click="Button_Click"/>
            
        </Grid>
    </Grid>
</Window>
